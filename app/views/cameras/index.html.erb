<h1>Cameras</h1>
<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Year</th>
      <th>Condition</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= puts @cameras, "all cameras" %>
    <%= puts @my_cameras, "my cameras"%>
    <%= puts @current_user, "current user"%>

    <% @cameras.each do |camera| %>
      <tr>
        <td><%= camera.model %></td>
        <td><%= camera.year %></td>
        <td><%= camera.condition %></td>
        <td><%= camera.price %></td>
        <td><%= link_to "View", camera %></td>
      </tr>
    <% end %>
    <% if user_signed_in? %>
      <% @my_cameras.each do |camera| %>
        <tr>
          <td><%= camera.model %></td>
          <td><%= camera.year %></td>
          <td><%= camera.condition %></td>
          <td><%= camera.price %></td>
          <td><%= link_to "View", camera %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Camera", new_camera_path %>
